<script type="text/javascript">
// loadJSON method to open the JSON file.
function loadJSON(path, success, error) {
  var xhr = new XMLHttpRequest();
  xhr.onreadystatechange = function () {
    if (xhr.readyState === 4) {
      if (xhr.status === 200) {
        success(JSON.parse(xhr.responseText));
      }
      else {
        error(xhr);
      }
    }
  };
  xhr.open('GET', path, true);
  xhr.send();
}

setInterval(loadJSON, 3000, "https://alternaradio.ar:8443/status-json.xsl", myData);


function myData(Data)
{
  document.getElementById("title").innerHTML = Data.icestats.source.title;
  document.getElementById("listeners").innerHTML = Data.icestats.source.listeners;
}

</script>
